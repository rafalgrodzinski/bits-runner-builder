@module console

@extern putchar fun: character u32 -> u32

@export printChar fun: character u32
    putchar(character)
;

@export printNum fun: number u32
    biggest u32 <- 10
    rep biggest <= number: biggest <- biggest * 10
    biggest <- biggest / 10

    rep biggest > 0:
        digit u32 <- number / biggest
        putchar(digit + '0')
        number <- number % biggest
        biggest <- biggest / 10
    ;
;